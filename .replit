[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "cd server && npm start"]

[workflows]
runButton = "Start App"

[[workflows.workflow]]
name = "Production Build"
author = 45912667
mode = "sequential"

[[workflows.workflow.tasks]]

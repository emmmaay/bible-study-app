args = "cd client && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ../server && npm start"

[[workflows.workflow]]
name = "Start App"
author = 45912667
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm install && npm start"
